{
  "name": "nara",
  "version": "1.0.0",
  "description": "nara is a framework for **distributed agents with collective memory**.",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npm run build:js && npm run build:css",
    "build:js": "esbuild nara-web/src/app.jsx --bundle --outfile=nara-web/public/app.js --format=iife --target=es2020 --jsx=automatic --jsx-import-source=preact --minify",
    "build:css": "node nara-web/scripts/build-iconoir.js && esbuild nara-web/src/app.css nara-web/src/vendor.css --bundle --outdir=nara-web/public --entry-names=[name] --minify",
    "watch": "npm run watch:js & npm run watch:css",
    "watch:js": "esbuild nara-web/src/app.jsx --bundle --outfile=nara-web/public/app.js --format=iife --target=es2020 --jsx=automatic --jsx-import-source=preact --sourcemap --watch",
    "watch:css": "node nara-web/scripts/build-iconoir.js && esbuild nara-web/src/app.css nara-web/src/vendor.css --bundle --outdir=nara-web/public --entry-names=[name] --sourcemap --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eljojo/nara.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/eljojo/nara/issues"
  },
  "homepage": "https://github.com/eljojo/nara#readme",
  "dependencies": {
    "d3": "^7.9.0",
    "dayjs": "^1.11.19",
    "iconoir": "^7.11.0",
    "preact": "^10.28.2"
  },
  "devDependencies": {
    "esbuild": "^0.27.2"
  }
}
